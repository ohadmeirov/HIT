<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.countriesFragments.CzechRepublicFragment">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewCzechRepublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czech Republic"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:padding="10dp" />

        <ImageView
            android:id="@+id/imageCzechRepublic"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/czechrepublicwaveflag" />

        <EditText
            android:id="@+id/editTextDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the number of days (1-7)"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonShowTrips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Trip Ideas"
            android:layout_gravity="center"
            android:backgroundTint="#80B0F6"
            android:layout_marginTop="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCzechRepublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF" />

    </LinearLayout>
</ScrollView>
