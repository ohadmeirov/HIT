<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
tools:context=".fragments.countriesFragments.HungaryFragment">

<LinearLayout
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewHungary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hungary"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#4CBB50"
        android:layout_gravity="center"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/imageHungary"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/hungarywaveflag" />

    <EditText
        android:id="@+id/editTextDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the number of days (1-7)"
        android:inputType="number"
        android:maxLength="1"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/buttonShowTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Trip Ideas"
        android:backgroundTint="#C0888F"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHungary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF" />

</LinearLayout>
</ScrollView>