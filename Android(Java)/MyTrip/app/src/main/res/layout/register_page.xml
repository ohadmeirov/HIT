<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudsbackground"
    android:orientation="vertical"
    tools:context=".fragments.startLogRegFragments.RegisterPage">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editTextEmailAddressAtRegisterPage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Type your email"
        android:layout_marginTop="10dp"
        android:textColorHint="#A9A9A9"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPasswordAtRegisterPage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Type your password"
        android:textColorHint="#A9A9A9"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextRePasswordAtRegisterPage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Type your password again"
        android:textColorHint="#A9A9A9"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Type your UserName"
        android:textColorHint="#A9A9A9"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Type your phone number"
        android:textColorHint="#A9A9A9"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/RegisterButtonFromRegisterPageToMainPage"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0099FF"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/BackFromRegisterPage"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0099FF"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />


</LinearLayout>