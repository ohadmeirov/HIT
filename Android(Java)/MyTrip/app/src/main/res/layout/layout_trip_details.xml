<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/buttonLanguageToggle"
            android:paddingTop="15dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/buttonLanguageToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#8B5E9A"
            android:textColor="@android:color/white"
            android:text="עברית"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18.5sp"
            android:lineSpacingExtra="17dp"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:elevation="4dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn More Online"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:paddingHorizontal="16dp"
            android:elevation="4dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>